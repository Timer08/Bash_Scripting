#!/bin/bash

echo "Enter the file path"
read path

if [ -z "$path" ]
then
        echo "Field is empty, bye"
else
        if [ -f $path ]
        then
                cat $path | cut -d "/" -f5 | grep -i ".js" | sort | cut  -d " " -f1 | uniq >> ./js_file
                sleep 2
                if [ -s ./js_file ]
                then
                        echo "***************File exist************"
                        cat js_file
                else
                        echo "No match found"
                fi
        else
                echo "No file found"
        fi
fi

